<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Texts-->
    <style name="Text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Text.Bold" parent="Text">
        <item name="android:fontFamily">@font/ubuntu_bold</item>
    </style>

    <style name="Text.Bold.H1">
        <item name="android:textSize">@dimen/text_headline_1</item>
    </style>

    <style name="Text.Bold.H2">
        <item name="android:textSize">@dimen/text_headline_2</item>
    </style>

    <style name="Text.Bold.H3">
        <item name="android:textSize">@dimen/text_headline_3</item>
    </style>

    <style name="Text.Bold.Normal">
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="Text.Bold.Normal.Caption">
        <item name="android:textSize">@dimen/text_middle</item>
    </style>

    <style name="Text.Bold.Normal.Caption.Small">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="Text.Medium" parent="Text">
        <item name="android:fontFamily">@font/ubuntu_medium</item>
    </style>

    <style name="Text.Medium.H1" parent="Text.Medium">
        <item name="android:textSize">@dimen/text_headline_1</item>
    </style>

    <style name="Text.Medium.H2" parent="Text.Medium">
        <item name="android:textSize">@dimen/text_headline_2</item>
    </style>

    <style name="Text.Medium.H3" parent="Text.Medium">
        <item name="android:textSize">@dimen/text_headline_3</item>
    </style>

    <style name="Text.Medium.Normal" parent="Text.Medium">
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="Text.Medium.Normal.Caption" parent="Text.Medium.Normal">
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="Text.Medium.Small" parent="Text.Medium">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="Text.Regular" parent="Text">
        <item name="android:fontFamily">@font/ubuntu_regular</item>
    </style>

    <style name="Text.Regular.H1" parent="Text.Regular">
        <item name="android:textSize">@dimen/text_headline_1</item>
    </style>

    <style name="Text.Regular.H2" parent="Text.Regular">
        <item name="android:textSize">@dimen/text_headline_2</item>
    </style>

    <style name="Text.Regular.H3" parent="Text.Regular">
        <item name="android:textSize">@dimen/text_headline_3</item>
    </style>

    <style name="Text.Regular.Normal" parent="Text.Regular">
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="Text.Regular.Normal.Caption" parent="Text.Regular.Normal">
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="Text.Regular.Middle.Caption" parent="Text.Regular.Normal">
        <item name="android:textSize">@dimen/text_middle</item>
        <item name="android:textColor">@color/text_caption</item>
    </style>

    <style name="Text.Regular.Middle" parent="Text.Regular">
        <item name="android:textSize">@dimen/text_middle</item>
    </style>

    <style name="Text.Regular.Small" parent="Text.Regular">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="Text.Regular.Small.Caption" parent="Text.Regular.Small">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/text_caption</item>
    </style>

    <style name="Text.Light" parent="Text">
        <item name="android:fontFamily">@font/ubuntu_light</item>
    </style>

    <style name="Text.Light.H1" parent="Text.Light">
        <item name="android:textSize">@dimen/text_headline_1</item>
    </style>

    <style name="Text.Light.H2" parent="Text.Light">
        <item name="android:textSize">@dimen/text_headline_2</item>
    </style>

    <style name="Text.Light.H3" parent="Text.Light">
        <item name="android:textSize">@dimen/text_headline_3</item>
    </style>

    <style name="Text.Light.Normal" parent="Text.Light">
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="Text.Light.Normal.Caption" parent="Text.Light.Normal">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/text_caption</item>
    </style>

    <style name="Text.Light.Small" parent="Text.Light">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="Text.Light.Tiny" parent="Text.Light">
        <item name="android:textSize">@dimen/text_tiny</item>
    </style>

    <style name="Text.Light.Small.Caption" parent="Text.Light.Small">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/text_caption</item>
    </style>

    <style name="Loader">
        <item name="android:layout_width">@dimen/loader_medium</item>
        <item name="android:layout_height">@dimen/loader_medium</item>
    </style>

    <!--    EditText-->
    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
        <item name="android:inputType">number</item>
        <item name="android:textColorHint">@color/text_caption</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/bg_default</item>

    </style>

    <!--    Button-->
    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.White" parent="Button">
        <item name="android:textColor">@color/red_primary</item>
        <item name="android:background">@drawable/bg_white_button</item>
    </style>

    <style name="Button.Secondary" parent="Button">
        <item name="android:textColor">#66FFFFFF</item>
        <item name="android:background">@drawable/bg_button_outlined</item>
    </style>

    <style name="Button.Red" parent="Button">
        <item name="android:textColor">@color/button_state_color</item>
        <item name="android:background">@drawable/bg_button_red</item>
    </style>

    <style name="Button.Red.Full" parent="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">@color/button_state_color</item>
        <item name="android:background">@drawable/bg_button_red_full</item>
        <item name="android:textSize">@dimen/text_headline_2.5</item>
        <item name="fontFamily">@font/ubuntu_medium</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>

</resources>