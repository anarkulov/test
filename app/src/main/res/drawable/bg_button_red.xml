<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <gradient android:angle="135" android:endColor="#FE5065" android:startColor="#AF0E22" android:type="linear" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="135" android:endColor="#FE5065" android:startColor="#AF0E22" android:type="linear" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <gradient android:angle="135" android:endColor="#FE5065" android:startColor="#AF0E22" android:type="linear" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item android:state_enabled="false" android:drawable="@drawable/bg_default" />
    <item  android:drawable="@drawable/bg_default"/>
</selector>